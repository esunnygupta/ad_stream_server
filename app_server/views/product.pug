extends _includes/_bootstrap
append styles
	// Custom styles for this template
	link(rel="stylesheet", href="/stylesheets/dashboard.css")
	link(rel="stylesheet", href="/stylesheets/all.min.css")
block body
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/') iSense
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav.navbar-right
					li
						a(href='/dashboard') Dashboard
					li
						a(href='#') Settings
					li
						a(href='#') Profile
					li
						a(href='#') Help
				form.navbar-form.navbar-right
					input.form-control(type='text', placeholder='Search...')
	.container-fluid
		.row
			.col-sm-3.col-md-2.sidebar
				ul.nav.nav-sidebar
					li
						a(href='/dashboard') Overview
					li
						a(href='#') Reports
					li
						a(href='/analytics') Analytics
					li
						a(href='#') Export
				| Transactions
				ul.nav.nav-sidebar
					li
						a(href='/transactions/cash') Cash
					li
						a(href='/transactions/credit') Credit
				| Manage
				ul.nav.nav-sidebar
					li
						a(href='/customer') Customers
					li.active
						a(href='/product') 
							| Products
							span.sr-only (current)
			.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
				h1.page-header Add Product
				form(name="add-product" action="/product" method="post")
					div.input
						| Product Name 
						br
						input(type="text", name="productName")
					br
					div.actions
						input(type="submit", value="Add Product")
					br
				h2.sub-header Product List
				table.table.table-striped
					tr
						th Product Name
						th Manage
					each key in productList
						tr
							td= key.name
							td
								button(class='btn btn-success btn-xs' type=button)
									i(class='far fa-edit fa-sm')
								|
								|
								button(class='btn btn-danger btn-xs' type=button)
									i(class='far fa-trash-alt fa-sm')