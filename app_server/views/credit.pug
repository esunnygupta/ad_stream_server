extends _includes/_bootstrap
append styles
	// Custom styles for this template
	link(rel="stylesheet", href="/stylesheets/dashboard.css")
block body
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/') iSense
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav.navbar-right
					li
						a(href='/dashboard') Dashboard
					li
						a(href='#') Settings
					li
						a(href='#') Profile
					li
						a(href='#') Help
				form.navbar-form.navbar-right
					input.form-control(type='text', placeholder='Search...')
	.container-fluid
		.row
			.col-sm-3.col-md-2.sidebar
				ul.nav.nav-sidebar
					li
						a(href='/dashboard') Overview
					li
						a(href='#') Reports
					li
						a(href='/analytics') Analytics
					li
						a(href='#') Export
				| Manage
				ul.nav.nav-sidebar
					li
						a(href='/campaign') Campaign
			.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
				h2.sub-header Credit Transactions
				table.table.table-striped
					tr
						th Customer
						th Payment Type
						th Product
						th Quantity
						th Rate
						th Date
						th Time
					each key in orderList
						tr
							td= key.customerId
							td= key.paymentType
							td= key.productName
							td= key.quantity
							td= key.rate
							td #{ key.date.toDate().toDateString() }
							td #{ key.date.toDate().toLocaleTimeString('en-US') }
