extends _includes/_bootstrap
append styles
	// Custom styles for this template
	link(rel="stylesheet", href="/stylesheets/dashboard.css")
	link(rel="stylesheet", href="/stylesheets/all.min.css")
block body
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/') iSense
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav.navbar-right
					li
						a(href='/dashboard') Dashboard
					li
						a(href='#') Settings
					li
						a(href='#') Profile
					li
						a(href='#') Help
				form.navbar-form.navbar-right
					input.form-control(type='text', placeholder='Search...')
	.container-fluid
		.row
			.col-sm-3.col-md-2.sidebar
				ul.nav.nav-sidebar
					li
						a(href='/dashboard') Overview
					li
						a(href='#') Reports
					li
						a(href='/analytics') Analytics
					li
						a(href='#') Export
				| Manage
				ul.nav.nav-sidebar
					li
						a(href='/campaign') Campaign
					li.active
						a(href='/upload') 
							| Upload Video
							span.sr-only (current)
			.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
				h1.page-header Upload Video
				form(name="upload-video" action="/upload" method="post" enctype='multipart/form-data')
					div.input
						label.sr-only(for='campaignName') Campaign Name
						input#campaignName.form-control(type="text", placeholder="Campaign Name", required='', autofocus='', name="video_name")
						br
					div.input
						label.sr-only(for='videoLink') Video Link
						input#videoLink.form-control(type="text", placeholder="Video Link", name="video_link")
						br
						| OR
						br
						br
						input(type='file', name="video")
					br
					div.actions
						input(type="submit", value="Upload Video")
					br